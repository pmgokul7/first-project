                  <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Model" name="model" value="<%=result.model%>">
                </div>
                
                <div class="sel d-flex mt-3">

                    <select class="form-control" id="exampleFormControlSelect1" name="brand">
                    <option><%=result.brand%></option>
