                <input type="text" placeholder="highlights" name="highlights" class="mt-3 form-control" value="<%=result.highlights[3]%>">
                <input type="text" placeholder="highlights" name="highlights" class="mt-3 form-control" value="<%=result.highlights[4]%>">
