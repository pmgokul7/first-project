      </div>
      <div class="modal-body">
       <%for(i=0;i<=wallet.length-1;i++){%>
        <%if(wallet[i].type=="credit"){%>
          <h5 class="text-success"> + <%=wallet[i].amount%>  </h5>
          <span class="pt-5"><%=wallet[i].date%> </span>
          <hr>
        <%}else{%>
          <h5 class="text-danger">  - <%=wallet[i].amount%></h5>
          <span class="pt-5"><%=wallet[i].date%> </span>
          <hr>
        <%}%>
<%}%>
      </div>
   
    </div>
  </div>
</div>


