@keyframes popUp {
from {
  transform: scale(0);
  opacity: 0; }
to {
  transform: scale(1);
  opacity: 1; } }

@keyframes slideUp {
from {
  transform: translateY(5px);
  opacity: 0; }
to {
  transform: translateY(0px);
  opacity: 1; } }

.profile {
animation: popUp ease-in-out 350ms;
