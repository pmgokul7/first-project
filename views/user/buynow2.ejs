  <script>
    function plus(a) {
      
      let  input=$("#inputbox").val()

      $("#inputbox").val(parseInt(input)+1)
      let  news=$("#inputbox").val()
      if(news!=Number(1))
      {
        $("#minusbtn").css("visibility", "visible")
      }
      $("#priceone").text(Number(a)*Number(news))
      
    }
    function minus(a) {
      
      let  input=$("#inputbox").val()
     
      $("#inputbox").val(parseInt(input)-1)
      let  news=$("#inputbox").val()
      if(news==Number(1))
      {
        $("#minusbtn").css("visibility", "hidden")
      }
      $("#priceone").text(Number(a)*Number(news))
      
    }
     
  
  

